<?xml version="1.0"?>

<!-- Push to test selected sensor group; Item 2151 -->
<PropertyList>
 <path>../../shared/knobs_buttons/5k.ac</path>

 <animation>
  <type>pick</type>
  <object-name>press_me</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("an24/FireTest/btn_push-to-test", 1.0, 0.1 );
	var groupselector = getprop("an24/FireTest/selection");
	call( fire.SensorsValvesTest,[groupselector] );
	sound.pushbutton("big", 3.2, -0.7, 1.4, 0.1, 0.1);
      </script>
    </binding>
   <mod-up>
    <binding>
     <command>nasal</command>
     <script>
	interpolate("an24/FireTest/btn_push-to-test", 0.0, 0.1 );
	sound.pushbutton("big", 3.2, -0.7, 1.4, 0.1, 0.0);
     </script>
    </binding>
   </mod-up>
  </action>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>press_me</object-name>
  <property>an24/FireTest/btn_push-to-test</property>
  <factor>0.005</factor>
  <axis>
    <x>0</x>
    <y>0</y>
    <z>-1</z>
  </axis>
 </animation>

</PropertyList>
