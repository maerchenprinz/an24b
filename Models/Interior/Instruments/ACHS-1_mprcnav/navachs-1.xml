<?xml version="1.0"?>

<!-- Achs-1, clock -->

<PropertyList>
 <path>achs-1.ac</path>

 <animation>
   <type>material</type>
   <object-name>housing</object-name>
   <object-name>hour_needle</object-name>
   <object-name>min_needle</object-name>
   <object-name>sec_needle</object-name>
   <object-name>ft_hour_needle</object-name>
   <object-name>ft_min_needle</object-name>
   <object-name>timer_sec_needle</object-name>
   <emission>
     <red>1.0</red>
     <green>1.0</green>
     <blue>0.4</blue>
     <factor-prop>an24/lights/instrlights</factor-prop>
   </emission>
 </animation>

<animation>
  <type>pick</type>
  <object-name>left_knob</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	if ( getprop("an24/AChS/start-btn") != 1 ){
	setprop("an24/AChS/begin", getprop("sim/time/elapsed-sec") );
	setprop("an24/AChS/start-btn", 1 );
	}

	else {
	setprop("an24/AChS/start-btn", 0 );
	}
      </script>
    </binding>
  </action>
</animation>

<animation>
  <type>translate</type>
  <object-name>left_knob</object-name>
  <property>an24/AChS/start-btn</property>
  <factor>0.003</factor>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>hour_needle</object-name>
  <property>/instrumentation/clock/indicated-min</property>
  <factor>-0.5</factor>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>hour_needle</object-name>
  <property>/instrumentation/clock/local-hour</property>
  <factor>-30.0</factor>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>min_needle</object-name>
  <property>/instrumentation/clock/indicated-sec</property>
  <factor>-0.1</factor>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>sec_needle</object-name>
  <property>/instrumentation/clock/indicated-sec</property>
  <factor>-6.0</factor>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!-- Flighttime -->

<animation>
  <type>rotate</type>
  <object-name>ft_hour_needle</object-name>
  <property>an24/AChS/flighttime</property>
  <factor>-0.00833333</factor>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0174</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>ft_min_needle</object-name>
  <property>an24/AChS/flighttime</property>
  <factor>-0.1</factor>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0174</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>timer_sec_needle</object-name>
  <property>an24/AChS/flighttime</property>
  <factor>-6.0</factor>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.0181</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!-- Text OSG -->

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">Achs-1 Clock</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.005 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

</PropertyList>
