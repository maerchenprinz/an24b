<?xml version="1.0"?>

<!-- SO-63, control unit of transponder system SOM-64 -->

<PropertyList>
 <path>so-63.ac</path>

<model>
 <path>so-63_sw_xpdr-on.xml</path>
  <offsets>
    <x-m>-0.0011</x-m>
    <y-m>0.0215</y-m>
    <z-m>0.0377</z-m>
  </offsets>
</model>

<model>
 <path>so-63_sw_sensitivity.xml</path>
  <offsets>
    <x-m>0.0012</x-m>
    <y-m>-0.0322</y-m>
    <z-m>-0.0076</z-m>
  </offsets>
</model>

 <animation>
   <type>knob</type>
   <object-name>knob_so63opmode</object-name>
    <property>instrumentation/transponder/inputs/so-63_opmode</property>
    <interpolation>
     <entry><ind>0.0</ind><dep>60</dep></entry>
     <entry><ind>1.0</ind><dep>30</dep></entry>
     <entry><ind>2.0</ind><dep>-30</dep></entry>
     <entry><ind>3.0</ind><dep>-60</dep></entry>
    </interpolation>
  <center>
   <x-m>0.0</x-m>
   <y-m>-0.0048</y-m>
   <z-m>0.026</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>instrumentation/transponder/inputs/so-63_opmode</property>
      <factor>-1</factor>
      <min>0</min>
      <max>3</max>                
      <wrap>false</wrap>
     </binding>
    </action>
   <hovered>
    <binding>
     <command>set-tooltip</command>
      <label>%s</label>
      <property>instrumentation/transponder/inputs/so-63_opmode</property>
      <tooltip-id>so-63opmode</tooltip-id>
      <mapping>nasal</mapping>
      <script>
	var xpdropmode = ['ICAO', 'Domestic', 'Ground Testing', 'Device 023M'];
	return xpdropmode[arg[0]];
      </script>
   </binding>
  </hovered>
 </animation>

 <animation>
   <type>knob</type>
   <object-name>xponder_mode</object-name>
    <property>instrumentation/transponder/inputs/anim-knob-mode</property>
   <factor>-30</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0123</y-m>
   <z-m>-0.0056</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>instrumentation/transponder/inputs/anim-knob-mode</property>
      <factor>1</factor>
      <min>0</min>
      <max>3</max>                
      <wrap>false</wrap>
     </binding>
     <!--binding>
     <command>nasal</command>
         <script>
	var xpdrmodes = ["5", "5", "3", "1"];
	setprop("/instrumentation/transponder/inputs/knob-mode", xpdrmodes[getprop("/instrumentation/transponder/inputs/anim-knob-mode")] );
         </script>
     </binding-->
    </action>
   <hovered>
       <binding>
         <command>set-tooltip</command>
         <label>%s</label>
         <property>instrumentation/transponder/inputs/anim-knob-mode</property>
         <tooltip-id>so-63-mode</tooltip-id>
         <mapping>nasal</mapping>
         <script>
	var xpdrttipmode = ['STANDBY', 'Mode C Only', 'Modes B+C', 'Modes A+C'];
	return xpdrttipmode[arg[0]];
         </script>
       </binding>
    </hovered>
 </animation>


<!-- Test ( "Control" ) button -->
<animation>
  <type>pick</type>
  <object-name>btn_test</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        setprop("/instrumentation/transponder/inputs/knob-mode-save", getprop("/instrumentation/transponder/inputs/knob-mode") );
	interpolate("/instrumentation/transponder/inputs/anim-test-btn", 1.0, 0.1 );
        setprop("/instrumentation/transponder/inputs/knob-mode", 2.0 );
      </script>
    </binding>
      <mod-up>
	<binding>
	<command>nasal</command>
	<script>
        setprop("/instrumentation/transponder/inputs/knob-mode", getprop("/instrumentation/transponder/inputs/knob-mode-save") );
	interpolate("/instrumentation/transponder/inputs/anim-test-btn", 0.0, 0.1 );
	</script>
	</binding>
      </mod-up>
  </action>
</animation>

<animation>
 <type>select</type>
 <condition>
    <property>instrumentation/transponder/serviceable</property>
    <property>instrumentation/transponder/inputs/serviceable</property>
    <property>instrumentation/transponder/inputs/anim-test-btn</property>
  </condition>
 <object-name>lampon</object-name>
</animation>

<animation>
  <type>translate</type>
  <object-name>btn_test</object-name>
  <property>instrumentation/transponder/inputs/anim-test-btn</property>
  <factor>0.003</factor>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>

<!-- Ident ( "ZNAK" ) button -->
 <animation>
  <type>pick</type>
  <object-name>btn_ident</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	setprop("/instrumentation/transponder/inputs/ident-btn", 1.0 );
# 18s hardcoded, 30s in SOM-64, so repeat after 12s
	settimer(func {setprop("/instrumentation/transponder/inputs/ident-btn", 1.0 );}, 12.0);
	interpolate("/instrumentation/transponder/inputs/anim-ident-btn", 1.0, 0.1 );
      </script>
    </binding>
    <mod-up>
     <binding>
     <command>nasal</command>
      <script>
	interpolate("/instrumentation/transponder/inputs/anim-ident-btn", 0.0, 0.1 );
      </script>
     </binding>
    </mod-up>
  </action>
  <hovered>
   <binding>
    <command>set-tooltip</command>
    <tooltip-id>so-ident</tooltip-id>
    <label>Ident</label>
   </binding>
  </hovered>
 </animation>

<animation>
  <type>translate</type>
  <object-name>btn_ident</object-name>
  <property>instrumentation/transponder/inputs/anim-ident-btn</property>
  <factor>0.003</factor>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>

