<?xml version="1.0"?>

<!-- Balance zero-indication of glidepath/course -->

<PropertyList>

 <path>ubm_balance-unit.ac</path>

<!-- Course, same as M-50 -->
 <animation>
   <type>knob</type>
   <object-name>knob_balance_course</object-name>
   <property>an24/SP-50/hs-needle-offset</property>
   <factor>370</factor>
  <axis>
    <x>0.0</x>
    <y>0.0</y>
    <z>-1.0</z>
  </axis>
  <center>
    <x-m>0.0</x-m>
    <y-m>-0.0141</y-m>
    <z-m>0.0</z-m>
  </center>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/SP-50/hs-needle-offset</property>
      <factor>-0.01</factor>
      <min>-0.99</min>
      <max>0.99</max>                
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>ubm_course_press_me</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/SP-50/hs-needle-null", 1.0, 0.1 );
        setprop("instrumentation/nav[0]/cdi/serviceable", 0.0 );
      </script>
    </binding>
      <mod-up>
	<binding>
	<command>nasal</command>
	<script>
        interpolate("an24/SP-50/hs-needle-null", 0.0, 0.1 );
        setprop("instrumentation/nav[0]/cdi/serviceable", 1.0 );
	</script>
	</binding>
      </mod-up>
  </action>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>knob_balance_course</object-name>
  <property>an24/SP-50/hs-needle-null</property>
  <factor>0.004</factor>
  <axis>
    <x>0</x>
    <y>0</y>
    <z>1</z>
  </axis>
 </animation>

<!-- Glideslope -->
 <animation>
   <type>knob</type>
   <object-name>knob_balance_glide</object-name>
   <property>an24/SP-50/gs-needle-offset</property>
   <factor>370</factor>
  <axis>
    <x>0.0</x>
    <y>0.0</y>
    <z>1.0</z>
  </axis>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0141</y-m>
    <z-m>0.0</z-m>
  </center>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/SP-50/gs-needle-offset</property>
      <factor>-0.01</factor>
      <min>-0.99</min>
      <max>0.99</max>                
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>ubm_glide_press_me</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/SP-50/gs-needle-null", 1.0, 0.1 );
        setprop("instrumentation/nav[0]/gs/serviceable", 0.0 );
      </script>
    </binding>
      <mod-up>
	<binding>
	<command>nasal</command>
	<script>
        interpolate("an24/SP-50/gs-needle-null", 0.0, 0.1 );
        setprop("instrumentation/nav[0]/gs/serviceable", 1.0 );
	</script>
	</binding>
      </mod-up>
  </action>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>knob_balance_glide</object-name>
  <property>an24/SP-50/gs-needle-null</property>
  <factor>0.004</factor>
  <axis>
    <x>0</x>
    <y>0</y>
    <z>1</z>
  </axis>
 </animation>

<!-- TEXT OSG -->
  <animation>
    <type>select</type>
    <object-name>textubm</object-name>
    <condition>
     <or>
      <property>sim/panel-hotspots</property>
      <property>sim/panel-hotspots_nav</property>
     </or>
    </condition>
  </animation>

  <text>
    <name>textubm</name>
    <type type="string">literal</type>
    <text type="string">UBM ILS/ SP-50 Calibration</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>reversed-xy-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.06</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <pitch-deg>0</pitch-deg>
      <heading-deg>-90</heading-deg>
      <roll-deg>0</roll-deg>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>-0.02</z-m>
    </offsets>
  </text>
  <animation>
    <type>material</type>
    <object-name>textubm</object-name>
    <emission>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
    </emission>
  </animation>

</PropertyList>
