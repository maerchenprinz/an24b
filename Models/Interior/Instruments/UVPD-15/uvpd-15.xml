<?xml version="1.0"?>

<!-- Cabin altitude and pressure difference indicator -->
<PropertyList>
 <path>uvpd-15.ac</path>

 <animation>
  <type>rotate</type>
  <object-name>needle_alt</object-name>
  <property>an24/Air-Cond/ARD-2077/cab_pressure-mmHg</property>
  <interpolation>
    <entry><ind>1013.25</ind><dep>17.0</dep></entry>
    <entry><ind>405.23</ind><dep>72.0</dep></entry><!--5000m-->
    <entry><ind>264.42</ind><dep>121.0</dep></entry><!--10000m-->
    <entry><ind>115.63</ind><dep>165.0</dep></entry><!--15000m-->
  </interpolation>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>needle_diff</object-name>
  <property>an24/Air-Cond/ARD-2077/press-diff_mmHg</property>
  <interpolation>
    <entry><ind>-0.04</ind><dep>11.0</dep></entry>
    <entry><ind>0.0</ind><dep>50.0</dep></entry>
    <entry><ind>0.4</ind><dep>135.0</dep></entry>
    <entry><ind>0.6</ind><dep>168.0</dep></entry>
  </interpolation>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
 </animation>

<!-- Instrument lighting -->
 <animation>
  <type>material</type>
  <object-name>housing</object-name>
  <object-name>needle_alt</object-name>
  <object-name>needle_diff</object-name>
  <emission>
   <red>1.0</red>
   <green>0.4</green>
   <blue>0.4</blue>
   <factor-prop>controls/lighting/panel-m_red</factor-prop>
  </emission>
 </animation>

<!-- TEXT OSG -->
  <animation>
   <type>select</type>
   <object-name>textuvpd</object-name>
    <condition>
     <or>
      <property>sim/panel-hotspots</property>
      <property>sim/panel-hotspots_cond</property>
     </or>
    </condition>
 </animation>

  <text>
    <name>textuvpd</name>
    <type type="string">literal</type>
    <text type="string">UVPD-15 Cabin Alt</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>0.005</x-m>
      <y-m>0.000</y-m>
      <z-m>0.000</z-m>
    </offsets>
  </text>
  <animation>
    <type>material</type>
    <object-name>textuvpd</object-name>
    <emission>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
    </emission>
  </animation>

</PropertyList>
