<?xml version="1.0"?>

<!-- Emergency pressure-relief -->

<PropertyList>
 <path>../../../shared/switches/covered_switch01.ac</path>
<!-- Cover -->

<animation>
  <type>pick</type>
  <object-name>cover</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        if( getprop("instrumentation/Pressure/cvr_press-relief" ) == 1.0 ){
        interpolate("instrumentation/Pressure/cvr_press-relief", 0.0, 0.2 );
        }
        else {
        interpolate("instrumentation/Pressure/cvr_press-relief", 1.0, 0.2 );
        }
      </script>
    </binding>
  </action>
</animation>

 <animation>
   <type>rotate</type>
   <object-name>cover</object-name>
   <property>instrumentation/Pressure/cvr_press-relief</property>
   <factor>140</factor>
  <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
  </axis>
 </animation>
 

</PropertyList>
