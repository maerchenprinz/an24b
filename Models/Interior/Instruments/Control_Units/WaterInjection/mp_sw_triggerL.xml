<?xml version="1.0"?>

<!-- Switch to open comp. outlet valve to pressurize water tank -->
<PropertyList>
 <path>../../../shared/switches/vg-15k.ac</path>

<animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	engines.WIValveLeft.start();
        interpolate("an24/WaterInjection/sw_triggerL", 1.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>waterinjlon</tooltip-id>
      <label> Water Inj.
Left Engine
      ON</label>
    </binding>
   </hovered>
</animation>

<animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	engines.WIValveLeft.start();
        interpolate("an24/WaterInjection/sw_triggerL", -1.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>waterinjloff</tooltip-id>
      <label> Water Inj.
Left Engine
     OFF</label>
    </binding>
   </hovered>
</animation>

 <animation>
   <type>rotate</type>
   <object-name>lever</object-name>
   <property>an24/WaterInjection/sw_triggerL</property>
  <interpolation>
    <entry><ind>1.0</ind><dep>30.0</dep></entry>
    <entry><ind>-1.0</ind><dep>-30.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
 </animation>

</PropertyList>
