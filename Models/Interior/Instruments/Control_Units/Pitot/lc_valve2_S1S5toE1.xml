<?xml version="1.0"?>

<!-- Lever to swap static ports from  S1/S5 to Emergency port 1 in radar chamber-->

<PropertyList>
 <path>../../../shared/pressure-valve.ac</path>

 <animation>
   <type>knob</type>
   <object-name>valvescrew</object-name>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/Pressure/pitotvalve2</property>
      <factor>0.2</factor>
      <min>-1</min>
      <max>1</max>                
      <wrap>false</wrap>
     </binding>

<!-- S1 active -->
     <binding>
      <condition>
       <greater-than>
	<property>an24/Pressure/pitotvalve2</property>
	<value>0.9</value>
       </greater-than>
      </condition>
      <command>property-assign</command>
      <property>/systems/static[0]/serviceable</property>
	<value>1.0</value>
     </binding>

     <binding>
      <condition>
       <less-than>
	<property>an24/Pressure/pitotvalve2</property>
	<value>0.9</value>
       </less-than>
      </condition>
      <command>property-assign</command>
      <property>/systems/static[0]/serviceable</property>
	<value>0.0</value>
     </binding>

<!-- E1 active -->
     <binding>
      <condition>
       <less-than>
	<property>an24/Pressure/pitotvalve2</property>
	<value>0.1</value>
       </less-than>
      </condition>
      <command>property-assign</command>
      <property>/systems/static[7]/serviceable</property>
	<value>1.0</value>
     </binding>

     <binding>
      <condition>
       <greater-than>
	<property>an24/Pressure/pitotvalve2</property>
	<value>0.1</value>
       </greater-than>
      </condition>
      <command>property-assign</command>
      <property>/systems/static[7]/serviceable</property>
	<value>0.0</value>
     </binding>

    </action>
 </animation>

 <animation>
  <object-name>valvelever</object-name>
  <type>rotate</type>
   <property>an24/Pressure/pitotvalve2</property>
   <factor>30</factor>
   <axis>
    <x>0</x>
    <y>0</y>
    <z>-1</z>
   </axis>
 </animation>

</PropertyList>
