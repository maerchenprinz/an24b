      <ind>1020.0</ind> <dep>270.0</dep>
     </entry>
     <entry>
      <ind>1180.0</ind> <dep>315.0</dep>
     </entry>
    </interpolation>
  <center>
   <x-m>0.0452</x-m>
   <y-m>-0.068</y-m>
   <z-m>0.0</z-m>
