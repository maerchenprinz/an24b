<?xml version="1.0"?>

<!-- ARK-11, remote panel of the ARK-P (ADF) system  -->

<PropertyList>
 <path>ark-11.ac</path>

 <animation>
   <type>material</type>
   <object-name>light_plate</object-name>
   <object-name>fine_freq_disk</object-name>
   <object-name>subband_disk</object-name>
   <emission>
     <red>1.0</red>
     <green>1.0</green>
     <blue>0.5</blue>
     <factor-prop>an24/lights/instrlights</factor-prop>
   </emission>
 </animation>

<!-- Mode selector OFF-Compass1-Sense-Compass2-Frame -->

 <animation>
   <type>knob</type>
   <object-name>mode_handle</object-name>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/ARK-11/mode-2</property>
      <factor>-1</factor>
      <min>0</min>
      <max>4</max>                
      <wrap>false</wrap>
     </binding>
     <binding>
      <command>nasal</command>
      <script>
         if( getprop("an24/ARK-11/mode-2" ) > 0.0 ){
         setprop("/instrumentation/adf[1]/ident-audible", 1.0);
         }
         else {
         setprop("/instrumentation/adf[1]/ident-audible", 0.0);
         }
      </script>
     </binding>
    </action>
 </animation>

 <animation>
  <object-name>mode_handle</object-name>
  <type>rotate</type>
   <property>an24/ARK-11/mode-2</property>
   <factor>40</factor>
  <center>
   <x-m>-0.0749</x-m>
   <y-m>-0.0958</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>0.0</y>
    <z>-1.0</z>
  </axis>
 </animation>

<!-- Volume control -->

 <animation>
   <type>knob</type>
   <object-name>vol_general</object-name>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/ARK-11/volume-norm-2</property>
      <factor>-0.05</factor>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
     </binding>
     <binding>
      <command>property-adjust</command>
      <property>/instrumentation/adf[1]/volume-norm</property>
      <factor>-0.05</factor>
      <min>0</min>
      <max>1</max>                
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

 <animation>
  <object-name>vol_general</object-name>
  <type>rotate</type>
   <property>an24/ARK-11/volume-norm-2</property>
   <factor>-100</factor>
  <center>
   <x-m>0.0703</x-m>
   <y-m>-0.0124</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>0.0</y>
    <z>1.0</z>
  </axis>
 </animation>

<!-- Subband handle -->

 <animation>
   <type>knob</type>
   <object-name>subband_handle</object-name>
    <action>
    <binding>
     <command>property-cycle</command>
      <property>an24/ARK-11/sub-band-khz-2</property>
