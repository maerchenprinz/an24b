    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/ARK-11/fixfreqanim-2", 1.0, 0.2, 0.0, 0.2 );
        setprop("an24/ARK-11/fixfreq-1", 0 );
