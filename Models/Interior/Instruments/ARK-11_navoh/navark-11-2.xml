<!-- Fixed Frequency buttons 1-9 / "P" button for smooth tuning mode -->

<animation>
  <type>pick</type>
  <object-name>fixp</object-name>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	if ( getprop("an24/ARK-11/fixp-2") == 1.0 ) {
	interpolate("an24/ARK-11/fixp-2", 0.0, 0.1 );
	}
	else {
	interpolate("an24/ARK-11/fixp-2", 1.0, 0.1 );
	}
      </script>
    </binding>
  </action>
</animation>

<animation>
  <type>translate</type>
  <object-name>fixp</object-name>
  <property>an24/ARK-11/fixp-2</property>
  <factor>0.003</factor>
  <axis>
    <x>0.0</x>
    <y>0.0</y>
    <z>-1.0</z>
  </axis>
</animation>

<animation>
  <type>pick</type>
  <object-name>fix1</object-name>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/ARK-11/animfix1-2", 1.0, 0.1 );
        settimer(func {interpolate("an24/ARK-11/animfix1-2", 0.0, 0.1 );},0.1);
	if ( getprop("an24/ARK-11/fixp-2") == 1.0 ) {
	setprop("an24/ARK-11/fix1-2", getprop("an24/ARK-11/final-freq-2") );
	}
	else {
	setprop("/instrumentation/adf[1]/frequencies/selected-khz", getprop("an24/ARK-11/fix1-2") );
	}	
      </script>
    </binding>
  </action>
</animation>

<animation>
  <type>translate</type>
  <object-name>fix1</object-name>
  <property>an24/ARK-11/animfix1-2</property>
  <factor>0.003</factor>
  <axis>
    <x>0.0</x>
    <y>0.0</y>
    <z>-1.0</z>
