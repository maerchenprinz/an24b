<?xml version="1.0"?>

<!-- UI2-240 of 2DIM-240, Pressure in the main, emergency and accumulator brake system; Hydro system pressure indicator by Yurik V. Nikiforoff -->
<PropertyList>

 <path>ui2-240.ac</path>

 <animation>
  <type>material</type>
  <object-name>ui2-240_needle1</object-name>
  <object-name>ui2-240_needle2</object-name>
  <object-name>housing</object-name>
   <emission>
     <red>0.8</red>
     <green>0.2</green>
     <blue>0.2</blue>
     <factor-prop>controls/lighting/panel-m_red</factor-prop>
   </emission>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>ui2-240_needle1</object-name>
  <property>an24/Hydraulics/UI2-240main</property>
  <interpolation>
    <entry><ind>0</ind><dep>0</dep></entry>
    <entry><ind>20</ind><dep>0</dep></entry>
    <entry><ind>70</ind><dep>40</dep></entry>
    <entry><ind>120</ind><dep>80</dep></entry>
    <entry><ind>130</ind><dep>90</dep></entry>
    <entry><ind>150</ind><dep>105</dep></entry>
    <entry><ind>170</ind><dep>107</dep></entry>
  </interpolation>
   <center>
    <x-m>0.0</x-m>
    <y-m>-0.0145</y-m>
    <z-m>0.016</z-m>
   </center>
   <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
   </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>ui2-240_needle2</object-name>
  <property>an24/Hydraulics/MainSystem_kgcm2</property>
  <interpolation>
    <entry><ind>0</ind><dep>0</dep></entry>
    <entry><ind>20</ind><dep>0</dep></entry>
    <entry><ind>50</ind><dep>27</dep></entry>
    <entry><ind>90</ind><dep>60</dep></entry>
    <entry><ind>130</ind><dep>90</dep></entry>
    <entry><ind>150</ind><dep>102</dep></entry>
    <entry><ind>170</ind><dep>104</dep></entry>
  </interpolation>
   <center>
    <x-m>0.0</x-m>
    <y-m>0.0145</y-m>
    <z-m>-0.017</z-m>
   </center>
   <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
   </axis>
 </animation>

<!-- Text OSG -->
  <animation>
    <type>select</type>
    <object-name>textui2240</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textui2240</name>
    <type type="string">literal</type>
    <text type="string">UI2-240 Hydro Press. Main System and Brake Accum.</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.01</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>0.005</x-m>
      <y-m>0.000</y-m>
      <z-m>0.000</z-m>
    </offsets>
  </text>
  <animation>
    <type>material</type>
    <object-name>textui2240</object-name>
    <emission>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
    </emission>
  </animation>

</PropertyList>
