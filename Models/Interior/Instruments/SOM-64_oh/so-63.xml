<?xml version="1.0"?>

<!-- SO-63, control unit of transponder system SOM-64 -->

<PropertyList>
 <path>so-63.ac</path>

 <animation>
   <type>knob</type>
   <object-name>squawk1</object-name>
    <property>/instrumentation/transponder/inputs/digit[3]</property>
   <factor>-30</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>-0.0388</y-m>
   <z-m>-0.0343</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>/instrumentation/transponder/inputs/digit[3]</property>
      <factor>-1</factor>
      <min>0</min>
      <max>7</max>                
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

