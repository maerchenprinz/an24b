<!-- Heading indicator USH
3D instrument for Tu-154 -->
<PropertyList>
 <path>ush.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>index</object-name>
  <object-name>compass</object-name>
  <object-name>zk_needle</object-name>
   <emission>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
     <factor-prop>an24/lights/instrlights</factor-prop>
   </emission>
</animation>

<!--Needles -->

<animation>
    <type>rotate</type>
    <object-name>zk_needle</object-name>
    <expression>
      <dif>
        <property>instrumentation/gpk-52/indicated-heading-deg</property>
        <property>instrumentation/zk2/heading-bug</property>
      </dif>
    </expression>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>compass</object-name>
  <property>instrumentation/zk2/heading-bug</property>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

 <animation>
   <type>knob</type>
   <object-name>knob</object-name>
   <property>instrumentation/zk2/heading-bug</property>
   <factor>5</factor>
   <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
   </axis>
   <center>
    <x-m>0</x-m>
    <y-m>-0.025737045</y-m>
    <z-m>-0.03216055</z-m>
   </center>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>instrumentation/zk2/heading-bug</property>
      <factor>1</factor>
      <min>0</min>
      <max>359</max>                
      <wrap>true</wrap>
     </binding>
    </action>
 </animation>

</PropertyList>
