<?xml version="1.0"?>

<!-- R-802; Radio frequency memory station -->
<PropertyList>
 <path>r-802mem.ac</path>

 <animation>
  <type>material</type>
  <object-name>lightplate</object-name>
  <object-name>channels09</object-name>
  <emission>
   <red>1.0</red>
   <green>0.7</green>
   <blue>0.5</blue>
   <factor-prop>controls/lighting/overhead_instr</factor-prop>
  </emission>
 </animation>

<!-- Channel selection knob -->
 <animation>
   <type>knob</type>
   <object-name>channel_sel</object-name>
   <property>an24/R-802/channel</property>
   <factor>-18</factor>
   <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
   </axis>
   <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.05</z-m>
   </center>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/R-802/channel</property>
      <factor>-1</factor>
      <min>1</min>
      <max>10</max>                
      <wrap>false</wrap>
     </binding>
    </action>
   <hovered>
       <binding>
         <command>set-tooltip</command>
         <label>Stored: %3.2fMHz</label>
         <measure-text>Stored: 999.99MHz</measure-text>
         <tooltip-id>r802-1-freq</tooltip-id>
         <property>instrumentation/comm[0]/frequencies/selected-mhz</property>
       </binding>
    </hovered>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>channels09</object-name>
  <property>an24/R-802/channel</property>
  <factor>36.0</factor>
  <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
  </axis>
   <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.0177</z-m>
   </center>
 </animation>

<!-- Screw to send current frequency to other station -->
 <animation>
  <type>pick</type>
  <object-name>memscrew</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/R-802/memscrew", 1.0, 0.1 );
      </script>
    </binding>
      <mod-up>
       <binding>
	<command>nasal</command>
	<script>
	interpolate("an24/R-802/memscrew", 0.0, 0.1 );
        </script>
       </binding>
      </mod-up>
  </action>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>memscrew</object-name>
  <property>an24/R-802/memscrew</property>
  <factor>0.0016</factor>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
 </animation>

<!-- Volume knob -->
 <animation>
   <type>knob</type>
   <object-name>r-802mem_volume</object-name>
   <property>an24/R-802/kn_volume-1</property>
   <factor>-90</factor>
   <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
   </axis>
   <center>
    <x-m>0.0</x-m>
    <y-m>0.0127</y-m>
    <z-m>0.0282</z-m>
   </center>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/R-802/kn_volume-1</property>
      <factor>-0.1</factor>
      <min>0</min>
      <max>1</max>                
      <wrap>false</wrap>
     </binding>
    </action>
   <hovered>
     <binding>
      <command>set-tooltip</command>
      <label>Volume: %3d%%</label>
      <measure-text>Volume: 100%</measure-text>
      <tooltip-id>r802-1-vol</tooltip-id>
      <mapping>percent</mapping>
      <property>an24/R-802/kn_volume-1</property>
     </binding>
   </hovered>
 </animation>

<!-- Noise reduction switch -->
 <animation>
  <type>pick</type>
  <object-name>clickspot_up_nr1</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("instrumentation/comm/cutoff-signal-quality", 0.6, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
     <binding>
      <command>set-tooltip</command>
      <tooltip-id>r802-1-nron</tooltip-id>
      <label>  Noise
Reduction
     ON</label>
     </binding>
   </hovered>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_down_nr1</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("instrumentation/comm/cutoff-signal-quality", 0.1, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
     <binding>
      <command>set-tooltip</command>
      <tooltip-id>r802-1-nroff</tooltip-id>
      <label>  Noise
Reduction
    OFF</label>
     </binding>
   </hovered>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>lever_nr1</object-name>
   <property>instrumentation/comm/cutoff-signal-quality</property>
  <interpolation>
    <entry><ind>0.1</ind><dep>30.0</dep></entry>
    <entry><ind>0.6</ind><dep>-30.0</dep></entry>
  </interpolation>
   <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
   </axis>
   <center>
    <x-m>0.01</x-m>
    <y-m>0.0</y-m>
    <z-m>0.06</z-m>
   </center>
 </animation>

<!-- TEXT OSG -->
 <animation>
  <type>select</type>
  <object-name>textr802-1</object-name>
   <condition>
    <or>
     <property>sim/panel-hotspots</property>
     <property>sim/panel-hotspots_comm</property>
    </or>
   </condition>
 </animation>

  <text>
    <name>textr802-1</name>
    <type type="string">literal</type>
    <text type="string">R-802 Radio</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>0.02</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </offsets>
  </text>
  <animation>
    <type>material</type>
    <object-name>textr802-1</object-name>
    <emission>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
    </emission>
  </animation>

</PropertyList>
