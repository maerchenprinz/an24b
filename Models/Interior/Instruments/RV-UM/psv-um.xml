<?xml version="1.0"?>

<!-- Height warning selector knob of radar altimeter -->
<PropertyList>
 <path>psv-um.ac</path>

 <animation>
   <type>material</type>
   <object-name>base_psv</object-name>
   <emission>
     <red>0.5</red>
     <green>0.2</green>
     <blue>0.1</blue>
     <factor-prop>controls/lighting/panel-l_red</factor-prop>
   </emission>
 </animation>

 <animation>
  <type>knob</type>
  <object-name>knob_psv</object-name>
   <property>an24/RV-UM/kn_warning-height</property>
  <factor>30</factor>
  <offset-deg>-120</offset-deg>
    <axis>
     <x>-1.0</x>
     <y>0.0</y>
     <z>0.0</z>
    </axis>
   <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/RV-UM/kn_warning-height</property>
      <factor>-1</factor>
      <min>0</min>
      <max>8</max>                
      <wrap>false</wrap>
     </binding>
    <binding>
     <command>property-cycle</command>
     <property>an24/RV-UM/warning-height-ft</property>
      <value>1312.3</value><!--400m-->
      <value>984.3</value><!--300m-->
      <value>820.2</value><!--250m-->
      <value>656.2</value><!--200m-->
      <value>492.1</value><!--150m-->
      <value>328.1</value><!--100m-->
      <value>164.0</value><!--50m-->
      <value>99999</value><!-- Control -->
      <value>-1</value><!-- OFF -->
      <wrap>false</wrap>
    </binding>
   </action>
 </animation>

<!-- TEXT OSG -->
 <animation>
   <type>select</type>
   <object-name>textpsv</object-name>
   <condition>
     <property>sim/panel-hotspots</property>
   </condition>
 </animation>

 <text>
   <name>textpsv</name>
   <type type="string">literal</type>
   <text type="string">Radio Altimeter Height Warning</text>
   <draw-text type="bool">true</draw-text>
   <font>Helvetica.txf</font>
   <character-size type="double">0.014</character-size>
   <character-aspect-ratio type="double">1.0</character-aspect-ratio>
   <axis-alignment>yz-plane</axis-alignment>
   <max-height>0.06</max-height>
   <max-width>0.05</max-width>
   <font-resolution>
     <width type="int">64</width>
     <height type="int">64</height>
   </font-resolution>
   <alignment>center-center</alignment>
   <offsets>
     <x-m>0.005</x-m>
     <y-m>0.000</y-m>
     <z-m>0.000</z-m>
   </offsets>
 </text>
 <animation>
   <type>material</type>
   <object-name>textpsv</object-name>
   <emission>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </emission>
 </animation>

</PropertyList>
