<?xml version="1.0"?>

<!-- Radar altimeter -->
<PropertyList>
 <path>uv-57.ac</path>

 <animation>
   <type>material</type>
   <object-name>face_uv-57</object-name>
   <object-name>needle_uv-57</object-name>
   <!--object-name>sticker_uv-57</object-name-->
   <emission>
     <red>1.0</red>
     <green>0.3</green>
     <blue>0.3</blue>
     <factor-prop>controls/lighting/panel-l_red</factor-prop>
   </emission>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>needle_uv-57</object-name>
  <property>an24/RV-UM/radar-altitude-ft</property>
  <interpolation>
    <entry><ind>-1.0</ind><dep>-125.0</dep></entry><!--OFF-->
    <entry><ind>0.0</ind><dep>-115.0</dep></entry>
    <entry><ind>32.8</ind><dep>-95.0</dep></entry><!--10m-->
    <entry><ind>65.6</ind><dep>-77.0</dep></entry><!--20m-->
    <entry><ind>98.4</ind><dep>-60.0</dep></entry><!--30m-->
    <entry><ind>131.2</ind><dep>-47.0</dep></entry><!--40m-->
    <entry><ind>164.0</ind><dep>-33.0</dep></entry><!--50m-->
    <entry><ind>196.9</ind><dep>-21.0</dep></entry><!--60m-->
    <entry><ind>328.1</ind><dep>-8.0</dep></entry><!--70m-->
    <entry><ind>262.5</ind><dep>0.0</dep></entry><!--80m-->
    <entry><ind>328.1</ind><dep>6.0</dep></entry><!--90m-->
    <entry><ind>328.1</ind><dep>15.0</dep></entry><!--100m-->
    <entry><ind>492.1</ind><dep>45.0</dep></entry><!--150m-->
    <entry><ind>656.2</ind><dep>63.0</dep></entry><!--200m-->
    <entry><ind>820.2</ind><dep>77.0</dep></entry><!--250m-->
    <entry><ind>984.3</ind><dep>87.0</dep></entry><!--300m-->
    <entry><ind>1312.3</ind><dep>105.0</dep></entry><!--400m-->
    <entry><ind>1640.4</ind><dep>115.0</dep></entry><!--500m-->
    <entry><ind>1968.5</ind><dep>124.0</dep></entry><!--600m-->
  </interpolation>
  <axis>
   <x>-1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

<!-- TEXT OSG -->
  <animation>
    <type>select</type>
    <object-name>textuv57</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textuv57</name>
    <type type="string">literal</type>
    <text type="string">UV-57 Radio Altimeter</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>0.005</x-m>
      <y-m>0.000</y-m>
      <z-m>0.000</z-m>
    </offsets>
  </text>
  <animation>
    <type>material</type>
    <object-name>textuv57</object-name>
    <emission>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
    </emission>
  </animation>

</PropertyList>
