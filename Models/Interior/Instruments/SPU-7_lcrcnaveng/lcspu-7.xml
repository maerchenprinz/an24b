<?xml version="1.0"?>

<!-- Pilot's SPU-7, crew/radio communication control -->

<PropertyList>
  <path>spu-7.ac</path>

 <animation>
   <type>material</type>
   <object-name>light_plate</object-name>
   <emission>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
     <factor-prop>an24/lights/instrlights</factor-prop>
   </emission>
 </animation>

<!-- Source selector, -->

 <animation>
   <type>knob</type>
   <object-name>source_select</object-name>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>/an24/spu-7/lc_source</property>
      <factor>1</factor>
      <min>0</min>
      <max>5</max>                
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

 <animation>
  <object-name>source_select</object-name>
  <type>rotate</type>
   <property>/an24/spu-7/lc_source</property>
   <factor>32</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0027</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
 </animation>

<!-- "Listen" volume -->

 <animation>
   <type>knob</type>
   <object-name>vol_listen</object-name>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>/an24/spu-7/lc_vol_listen</property>
      <factor>-0.05</factor>
      <min>0</min>
      <max>1</max>                
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

 <animation>
  <object-name>vol_listen</object-name>
  <type>rotate</type>
   <property>/an24/spu-7/lc_vol_listen</property>
   <factor>800</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>-0.0327</y-m>
   <z-m>0.0436</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
 </animation>

<!-- "General" volume -->

 <animation>
   <type>knob</type>
   <object-name>vol_general</object-name>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>/an24/spu-7/lc_vol_general</property>
      <factor>-0.05</factor>
      <min>0</min>
      <max>1</max>                
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

 <animation>
  <object-name>vol_general</object-name>
  <type>rotate</type>
   <property>/an24/spu-7/lc_vol_general</property>
   <factor>800</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0327</y-m>
   <z-m>0.0436</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
 </animation>

