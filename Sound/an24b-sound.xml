<?xml version="1.0"?>
 
<PropertyList>

<fx>
 
  <ai-24>
   <name>Left engine starter internal</name>
   <mode>once</mode>
   <path>Aircraft/an24b/Sound/Engine/AI-24_Starter.wav</path>
   <condition>
    <property>controls/engines/engine[0]/starter</property>
   </condition>
   <position>
    <x>5.94</x>
    <y>3.95</y>
    <z>1.185</z>
   </position>
   <volume>
    <property>sim/current-view/internal</property>
    <factor>0.3</factor>
   </volume>
  </ai-24>

  <ai-24>
   <name>Right engine starter internal</name>
   <mode>once</mode>
   <path>Aircraft/an24b/Sound/Engine/AI-24_Starter.wav</path>
   <condition>
    <property>controls/engines/engine[1]/starter</property>
   </condition>
   <position>
    <x>5.94</x>
    <y>-3.95</y>
    <z>1.185</z>
   </position>
   <volume>
    <property>sim/current-view/internal</property>
    <factor>0.3</factor>
   </volume>
  </ai-24>

<!-- Engine internal sound -->
<!-- Left engine -->
  <propeller>
   <name>Left engine internal</name>
   <mode>looped</mode>
   <path>Aircraft/an24b/Sound/Engine/AI-24_Prop1-2.wav</path>
   <condition>
     <property>sim/current-view/internal</property>
     <property>engines/engine[0]/running</property>
   </condition>
   <volume>
    <property>engines/engine[0]/running</property>
    <factor>0.5</factor>
    <min>0.0</min>
    <max>1.0</max>
   </volume>
   <pitch>
    <property>/engines/engine[0]/thruster/rpm</property>
    <factor>0.000803213</factor>
    <min>0.5</min>
    <max>2.0</max>
    <offset>0.0</offset>
   </pitch>
  <position>
    <x>5.94</x>
    <y>3.95</y>
    <z>1.185</z>
  </position>
  </propeller>
<!-- Right engine -->
  <propeller>
   <name>Right engine internal</name>
   <mode>looped</mode>
   <path>Aircraft/an24b/Sound/Engine/AI-24_Prop1-2.wav</path>
   <condition>
     <property>sim/current-view/internal</property>
     <property>engines/engine[1]/running</property>
   </condition>
   <volume>
    <property>engines/engine[1]/running</property>
    <factor>0.5</factor>
    <min>0.0</min>
    <max>1.0</max>
   </volume>
   <pitch>
    <property>/engines/engine[1]/thruster/rpm</property>
    <factor>0.000803213</factor>
    <min>0.5</min>
    <max>2.0</max>
    <offset>0.0</offset>
   </pitch>
  <position>
    <x>5.94</x>
    <y>-3.95</y>
    <z>1.185</z>
  </position>
  </propeller>
<!-- Negative thrust sound left-->
  <propeller_rev>
   <name>Left engine propeller negative thrust internal</name>
   <mode>looped</mode>
   <path>Aircraft/an24b/Sound/Engine/AI-24_Prop1-1.wav</path>
   <condition>
     <property>sim/current-view/internal</property>
     <property>engines/engine[0]/running</property>
    <less-than>
      <property>/engines/engine[0]/thrust_lb</property>
      <value>0</value>
    </less-than>
   </condition>
   <volume>
    <type>abs</type>
    <property>/engines/engine[0]/thrust_lb</property>
    <factor>0.00125</factor>
   </volume>
   <pitch>
    <property>/engines/engine[0]/thruster/rpm</property>
    <factor>0.000873362</factor>
    <min>0.5</min>
    <max>2.0</max>
    <offset>0.0</offset>
   </pitch>
  <position>
    <x> 5.94 </x>
    <y> 3.95 </y>
    <z> 1.185 </z>
  </position>
  </propeller_rev>
<!-- Negative thrust sound right-->
  <propeller_rev>
   <name>Right engine propeller negative thrust internal</name>
   <mode>looped</mode>
   <path>Aircraft/an24b/Sound/Engine/AI-24_Prop1-1.wav</path>
