<!-- Gear Sounds -->
  <rumble>
   <name>rumble</name>
   <mode>looped</mode>
   <path>Sounds/rumble.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
     <property>/gear/gear[2]/wow</property>
    </or>
    <!-- <property>/sim/current-view/internal</property> -->
   </condition>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <type>log</type>
    <factor>0.25</factor>
   </volume>
  </rumble>

  <gear>
   <name>gear up</name>
   <path>Aircraft/an24b/Sound/Systems/24gear.wav</path>
   <condition>
    <less-than>
     <property>gear/gear[1]/position-norm</property>
     <value>0.99</value>
    </less-than>
   </condition>
   <mode>once</mode>
  </gear> 

  <gear>
   <name>gear down</name>
   <path>Aircraft/an24b/Sound/Systems/24gear.wav</path>
   <condition>
    <greater-than>
     <property>gear/gear[1]/position-norm</property>
     <value>0.01</value>
    </greater-than>
   </condition>
   <mode>once</mode>
  </gear> 
<!-- 
  <gear>
   <name>gear-lock</name>
   <path>Sounds/gear-lck.wav</path>
   <condition>
    <greater-than>
     <property>/gear/gear[0]/position-norm</property>
     <value>0.9</value>
    </greater-than>
   </condition>
  </gear>
-->
  <squeal>
   <name>squeal</name>
   <path>Sounds/squeal.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
     <property>/gear/gear[2]/wow</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/speed-down-fps</property>
    <factor>0.5</factor>
    <max>1.0</max>
   </volume>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <factor>0.01</factor>
    <max>1.0</max>
   </volume>
   <volume>
    <internal>dt_stop</internal>
    <factor>0.05</factor>
    <max>1.0</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.0025</factor>
    <offset>1.2</offset>
   </pitch>
  </squeal>

<!-- Flap Sounds -->
  <flap>
   <name>flaps</name>
   <mode>in-transit</mode>
   <path>Aircraft/an24b/Sound/Systems/24flaps.wav</path>
   <property>/surface-positions/flap-pos-norm</property>
   <volume>
    <property>sim/current-view/internal</property>
    <factor>1</factor>
   </volume>
  </flap>

<!-- Wind -->
  <wind>
   <name>wind</name>
   <mode>looped</mode>
   <path>Sounds/wind.wav</path>
   <property>/velocities/airspeed-kt</property>
   <volume>
    <property>/position/altitude-ft</property>
    <factor>-0.000015</factor>
    <offset>1.0</offset>
    <min>0.1</min>
    <max>1.0</max>
   </volume>
   <volume>
     <property>/velocities/airspeed-kt</property>
     <factor>0.0015</factor>
     <min>0.03</min>
     <max>0.25</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.0035</factor>
    <offset>1.25</offset>
   </pitch>
  </wind>

<!-- Stall alarm(s) -->
  <stall>
   <name>stall</name>
   <mode>looped</mode>
   <path>Aircraft/an24b/Sound/Systems/vibrator.wav</path>
   <condition>
    <and>
     <greater-than>
       <property>/fdm/jsbsim/aero/alpha-wing-rad</property>
       <value>0.21</value>
     </greater-than>
     <not>
       <property>/gear/gear[0]/wow</property>
       <property>/gear/gear[1]/wow</property>
       <property>/gear/gear[2]/wow</property>
     </not>
    </and>
    <!-- <property>/sim/current-view/internal</property> -->
   </condition>
   <volume>
    <value>1</value>
    <max>1.0</max>
   </volume>
   <reference-dist>10.0</reference-dist>
   <max-dist>20.0</max-dist>
  </stall>

<!-- Switches -->
  <switch>
   <name>AZR</name>
   <mode>once</mode>
   <path>Sounds/click.wav</path>
   <condition>
    <property>an24/sound/click_azr</property>
   </condition>
   <position>
    <x><property>an24/sound/click-pos-x</property></x>
    <y><property>an24/sound/click-pos-y</property></y>
    <z><property>an24/sound/click-pos-z</property></z>
   </position>
   <!--reference-dist>.02</reference-dist-->
   <max-dist>25.0</max-dist>
  </switch>

  <switch>
   <name>AZS</name>
   <mode>once</mode>
   <path>Sounds/click.wav</path>
   <condition>
    <equals>
     <property>an24/sound/click_azs</property>
     <value>1</value>
    </equals>
   </condition>
   <position>
    <x><property>an24/sound/click-pos-x</property></x>
    <y><property>an24/sound/click-pos-y</property></y>
    <z><property>an24/sound/click-pos-z</property></z>
   </position>
   <!--reference-dist>.02</reference-dist-->
   <!--max-dist>5.0</max-dist-->
  </switch>


<!-- Marker -->
 <marker>
