 </marker>

<!-- PPS warnings by siren S1 (wrong landing or T/O configuration) and VS-46 (cabin altitude) -->
  <siren>
   <name>pps</name>
   <path>Aircraft/an24b/Sound/Systems/siren_constant.wav</path>
   <condition>
    <greater-than>
     <property>an24/Siren/constant</property>
     <value>0</value>
    </greater-than>
   </condition>
   <mode>looped</mode>
   <volume>
    <offset type="double">0.5</offset>
   </volume>
   <position>
    <x>3.90</x>
    <y>0.60</y>
    <z>1.42</z>
   </position>
  </siren>

<!-- Radio Altitude warning -->
  <siren>
   <name>radioalt</name>
   <path>Aircraft/an24b/Sound/Systems/telefony.wav</path>
   <condition>
    <greater-than>
     <property>an24/RV-UM/warning-triggered</property>
     <value>0</value>
    </greater-than>
   </condition>
   <mode>once</mode>
   <volume>
    <offset type="double">0.5</offset>
   </volume>
   <position>
    <x>3.90</x>
    <y>0.60</y>
    <z>1.42</z>
   </position>
  </siren>

<!-- Radio(s) -->
  <radio>
   <name>ark1</name>
   <path>Sounds/radionoise.wav</path>
    <condition>
     <or>
      <not-equals>
       <property>/instrumentation/adf[0]/mode</property>
       <value type="string">off</value>
      </not-equals>
      <not-equals>
       <property>/instrumentation/adf[2]/mode</property>
       <value type="string">off</value>
      </not-equals>
     </or>
    </condition>
   <mode>looped</mode>
   <volume>
    <property>/instrumentation/adf[0]/volume-norm</property>
   </volume>
  </radio>

  <radio>
   <name>ark2</name>
   <path>Sounds/radionoise.wav</path>
    <condition>
     <or>
      <not-equals>
       <property>/instrumentation/adf[1]/mode</property>
       <value type="string">off</value>
      </not-equals>
      <not-equals>
       <property>/instrumentation/adf[3]/mode</property>
       <value type="string">off</value>
      </not-equals>
     </or>
    </condition>
   <mode>looped</mode>
   <volume>
    <property>/instrumentation/adf[1]/volume-norm</property>
   </volume>
  </radio>

<!-- Fun stuff -->
  <other>
    <name>honk</name>
    <path>Aircraft/an24b/Sound/Systems/honk.wav</path>
     <condition>
     <less-than>
      <property>an24/DoorsHatches/nose</property>
      <value>1.0</value>
     </less-than>
     </condition>
    <mode>once</mode>
    <volume>
      <offset type="double">0.5</offset>
    </volume>
  </other>

</fx>
 
</PropertyList>
