    <factor>0.000873362</factor>
    <min>0.5</min>
    <max>2.0</max>
    <offset>0.0</offset>
   </pitch>
  <position>
    <x> 5.94 </x>
    <y> -3.95 </y>
    <z> 1.185 </z>
  </position>
  </propeller_rev>

