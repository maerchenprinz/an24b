<PropertyList>

<!--########################################
## EXTERIOR LIGHTS
#########################################-->
 <filter>
  <enable>
   <condition>
    <or>
     <property>/an24/lights/OSS-61red</property>
     <property>/an24/lights/OSS-61white</property>
    </or>
   </condition>
  </enable>
  <type>gain</type>
  <gain>540</gain>
  <input>
   <property>sim/time/elapsed-sec</property>
  </input>
  <output>an24/lights/strobe-timer</output>
  <period>
   <min>0</min>
   <max>360</max>
  </period>
 </filter>

 <filter>
  <type>gain</type>
  <input>
   <condition>
    <less-than>
     <property>/an24/lights/strobe-timer</property>
     <value>300.0</value>
    </less-than>
   </condition>
   <property>/an24/lights/OSS-61red</property>
  </input>
  <input>
   <value>0.0</value>
  </input>
  <output>/an24/lights/OSS-61red_visible</output>
 </filter>

 <filter>
  <type>gain</type>
  <input>
   <condition>
    <less-than>
     <property>/an24/lights/strobe-timer</property>
     <value>210.0</value>
    </less-than>
   </condition>
   <property>/an24/lights/OSS-61white</property>
  </input>
  <input>
   <value>0.0</value>
  </input>
  <output>/an24/lights/OSS-61white_visible</output>
 </filter>

