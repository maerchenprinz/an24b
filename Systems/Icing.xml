<?xml version="1.0"?>

<system name="Icing">

<channel name="Conditions" execrate="240">

<!-- Let's iron three properties to values from around 0-1 (temperature to -1 to 1) at extreme conditions:
     - temp-degc -70 (1) to +70 (-1)
     - effective-visibility-m ("humidity") 0 to 32000
     - airspeed-kt from 0 to 250 (VNE);
 Sum up, divide by 3; finally, have icing become something between around -1 (ice melts fast) to around +1 (severe icing);
-->

 <fcs_function name="/an24/Anti-Ice/conditions/humidity-summand">
  <function>

  <ifthen>
   <le>
    <property>/environment/temperature-degc</property>
    <property>/environment/dewpoint-degc</property>
   </le>

   <difference>
    <value>1.0</value>
    <quotient>
     <property>/environment/effective-visibility-m</property>
     <value>32000</value>
    </quotient>
   </difference>

   <value>0.0</value>
  </ifthen>


  </function>
  <clipto>
   <min>0.0</min>
   <max>1.0</max>
  </clipto>
 </fcs_function>

 <fcs_function name="/an24/Anti-Ice/conditions/speed_humidity-summand">
  <function>

  <sum>
   <abs>
   <quotient>
    <property>/velocities/airspeed-kt</property>
    <value>250</value>
   </quotient>
   </abs>
   <property>/an24/Anti-Ice/conditions/humidity-summand</property>
  </sum>

  </function>
 </fcs_function>
<!---->
 <fcs_function name="/an24/Anti-Ice/conditions/icing">
  <function>

 <product>

  <quotient>
   <sum>

    <property>/an24/Anti-Ice/conditions/speed_humidity-summand</property>

    <abs>
     <quotient>
      <property>/environment/temperature-degc</property>
      <value>70</value>
     </quotient>
    </abs>

   </sum>

   <value>3</value>
  </quotient>

  <ifthen>
   <ge>
    <property>/environment/temperature-degc</property>
    <value>0</value>
   </ge>
   <value>-1</value><!--ice melting-->
   <value>1</value><!--ice accretion-->
  </ifthen>

 </product>

  </function>
 </fcs_function>

</channel>

<!--#########################################
## Front Window A
##########################################-->
<channel name="Front A temperature" execrate="120">

 <fcs_function name="/an24/Anti-Ice/elements/fronta_degc">
  <function>

 <sum>
  <property>/an24/Anti-Ice/elements/fronta_degc</property>

  <product>
   <difference>
     <property>/environment/temperature-degc</property>
     <property>/an24/Anti-Ice/elements/fronta_degc</property>
   </difference>
   <property>/an24/Anti-Ice/conditions/speed_humidity-summand</property>
   <value>0.4</value><!--"calibration"-->
  </product>

  <product>
   <difference>
    <value>60</value><!--assumed max temp-->
    <property>/an24/Anti-Ice/elements/fronta_degc</property>
   </difference>

   <quotient>
    <sum>
     <property>/an24/Air-Cond/left_windows_kgperh</property>
     <property>/an24/Air-Cond/right_windows_kgperh</property>
    </sum>
    <value>60</value><!--"calibration"-->
   </quotient>

   <property>simulation/channel-dt</property>
  </product>

 </sum>

  </function>
 </fcs_function>

</channel>
